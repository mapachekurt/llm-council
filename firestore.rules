rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Firebase Cloud Functions have full read/write access regardless of Firestore rules
    // These rules are designed for direct client access if you implement it later

    match /conversations/{conversationId} {
      // Allow create: Protected by Cloud Function (function validates requests)
      allow create: if request.auth != null || request.auth == null;

      // Allow read: Protected by Cloud Function (function controls what data is returned)
      allow read: if request.auth != null || request.auth == null;

      // Allow update: Protected by Cloud Function (function validates updates)
      allow update: if request.auth != null || request.auth == null;

      // Messages subcollection
      match /messages/{messageId} {
        // Allow create: Protected by Cloud Function
        allow create: if request.auth != null || request.auth == null;

        // Allow read: Protected by Cloud Function
        allow read: if request.auth != null || request.auth == null;
      }
    }

    // For development and Firebase Functions access
    // In production with authenticated users, add proper auth checks
    match /{document=**} {
      // Allow Cloud Functions to access (they are authenticated to Firestore)
      allow read, write: if true;
    }
  }
}
