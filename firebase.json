{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "python312",
    "codebase": "llm-council"
  },
  "hosting": {
    "site": "llm-council",
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/conversations/**",
        "function": "on_message"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
